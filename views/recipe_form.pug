extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Name of Recipe' name='title' required='true' value=(undefined===recipe ? '' : recipe.title) )
    div.form-group
      label(for='category') Category:
      select#category.form-control(type='select', placeholder='Select category' name='category' required='true' )
        for category in categories
          if recipe
            option(value=category._id selected=(category._id.toString()===recipe.category._id.toString() ? 'selected' : false) ) #{category.name}
          else
            option(value=category._id) #{category.name}
    div.form-group
      label(for='ingredients') Ingredients:
      textarea#ingredients.form-control(type='textarea', placeholder='Ingredients...' name='ingredients' required='true') #{undefined===recipe ? '' : recipe.ingredients}
    div.form-group
      label(for='directions') Directions:
      textarea#directions.form-control(type='textarea', placeholder='Directions...' name='directions' required='true') #{undefined===recipe ? '' : recipe.directions}
    
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
