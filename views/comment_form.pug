extends layout

block content

  h1 #{title}
  h3 #{recipe.title}

  form(method='POST' action='')
    div.form-group
      label(for='content') Comment:
      textarea#content(type='textarea', placeholder='Leave your comment here' name='content' rows='4' required='true' value=(undefined===comment ? '' : comment.content) )
    button#submit(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
