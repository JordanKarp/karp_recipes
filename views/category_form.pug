extends layout

block content

  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Category:
      input#name.form-control(type='text', placeholder='Breakfast, Snacks etc.' name='name' required='true' value=(undefined===category ? '' : category.name) )
      label(for='description') Description:
      input#description.form-control(type='text', placeholder='Short description...' name='name' value=(undefined===category ? '' : category.descrption) )
    button#submit(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
