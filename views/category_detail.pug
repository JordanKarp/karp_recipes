extends layout

block content

  div(class='control')
    a(class='update' href=category.url+'/update' ) Edit Category
    a(class='delete' href=category.url+'/delete') Delete
  h1 #{category.name}
  p Description: #{category.description}
  hr
  if category_recipes.length == 1
    h4  #{category_recipes.length} recipe under #{category.name}:
  else
    h4  #{category_recipes.length} recipes under #{category.name}:
  endif
  ul
    each recipe in category_recipes
      li
        a(href=recipe.url) #{recipe.title}
    else
        p This category has no recipes
