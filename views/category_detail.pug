extends layout

block content

  h1 Category: #{category.name}
  p Description: #{category.description}
   
   hr
  p
    a(href=category.url+'/delete') Delete Category
  p
    a(href=category.url+'/update') Update Category


  div(style='margin-left:20px;margin-top:20px')

    h4 Recipes

    ul
      each recipe in category_recipes
        li
          a(href=recipe.url) #{recipe.title}

      else
        p This category has no recipes
