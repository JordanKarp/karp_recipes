extends layout

block content

  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Tag:
      input#name.form-control(type='text', placeholder='Tag name' name='name' required='true' value=(undefined===tag ? '' : tag.name) )
      label(for='group') Group:
      select#group.form-control(type='select', placeholder='Select group' name='group' required='true' )
        for group in groups
          if tag
            option(value=group selected=(group===tag.group ? 'selected' : false) ) #{group}
          else
            option(value=group) #{group}
      label(for='description') Description:
      input#description.form-control(type='text', placeholder='Short description...' name='description' value=(undefined===tag ? '' : tag.description) )
    button#submit(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
